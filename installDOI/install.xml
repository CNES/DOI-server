<installation version="5.0">
  <variables>
    <variable name="RESOURCEROOT" value="src/main/izpack"/>
  </variables>
  <info>
    <appname>DOI Server</appname>
    <appversion>1.0</appversion>
    <javaversion>1.8</javaversion>
  </info>
 
  <locale>
    <langpack iso3="eng"/>
  </locale>
 
  <guiprefs width="800" height="600" resizable="no">
  </guiprefs>
 
  <panels>
    <panel classname="TargetPanel"/>
    <panel classname="PacksPanel"/>
    <panel classname="InstallPanel"/>
    <panel classname="FinishPanel"/>
  </panels>
  
  <packs>
    <pack name="DOI Server" required="yes">
      <description>DOI Server files</description>
      <fileset dir="." targetdir="${INSTALL_PATH}" override="true"/>
    </pack>
    <file targetdir="$INSTALL_PATH/db" src="installationDB.sh" />
    <!-- executable targetfile="$INSTALL_PATH/installationDB.sh" type="bin" stage="postinstall" failure ="warn" keep="true" >
        <os family="unix" />
    </executable -->
  </packs>
  
                 
</installation>