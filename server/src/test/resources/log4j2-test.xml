<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
        
    <Appenders>
        <File name="PERFO" fileName="perfo.log" append="true">     
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} | [%t] %C{2} (%F:%L) | %m%n"/>   
        </File>
        <File name="SECURITY" fileName="security.log" append="true">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %C{2} (%F:%L) - %m%n"/>
        </File>        
        <File name="FILE" fileName="logfile.log" append="true">
            <PatternLayout pattern="%-5level %d{yyyy-MM-dd HH:mm:ss} %C{2} (%F:%L) - %m%n"/>
        </File>
        <File name="API" fileName="api.log" append="true">                
            <!--<PatternLayout pattern="%r [%t] %-5p %c %x - %m%n"/>-->
        </File>
        <Console name="CONSOLE" target="SYSTEM_OUT">
            <PatternLayout pattern="%highlight{%-5level %d{yyyy-MM-dd HH:mm:ss}} %C{2} (%F:%L) - %m%n"/>
        </Console>
        <Console name="SHELL" target="SYSTEM_OUT">
            <PatternLayout pattern="%highlight{%-5level} %msg%n"/>
        </Console>        
    </Appenders>

    <Loggers>
        <Logger name="fr.cnes.doi.logging.security" level="OFF">
            <AppenderRef ref="SECURITY"/>
        </Logger>
        <Logger name="fr.cnes.doi.logging.app" level="OFF">
            <AppenderRef ref="PERFO"/>                        
        </Logger>
                
        <Logger name="fr.cnes.doi.logging.api" level="OFF">
            <AppenderRef ref="API"/>                        
        </Logger>

        <Logger name="org.restlet" level="OFF">
            <AppenderRef ref="CONSOLE"/>
        </Logger>

        <Logger name="fr.cnes.doi.application" level="OFF">
            <AppenderRef ref="CONSOLE"/>
        </Logger>

        <Root level="DEBUG">
            <AppenderRef ref="INFO"/>
        </Root>
    </Loggers>

</Configuration>
